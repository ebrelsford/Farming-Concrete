<?xml version="1.0" encoding="utf-8"?>
<kml xmlns="http://earth.google.com/kml/2.1">
    <Folder>
        {% for garden in gardens %}
        <Placemark id="{{ garden.id }}">
            <name>
                {% if garden.type.short_name == "backyard" %}
                backyard garden
                {% else %}
                {{ garden.name }}
                {% endif %}
            </name>
            <Point>
                <coordinates>
                {{ garden.longitude }}, {{ garden.latitude }}
                </coordinates>
            </Point>
        </Placemark>
        {% endfor %}
    </Folder>
</kml>
